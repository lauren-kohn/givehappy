<% if @giver.errors.any? %>
  <ul>
  <% @giver.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<h1>Sign Up</h1>

<%= form_for(@giver) do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <br>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
    <br>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
    <br>
    <%= f.submit "Sign Up" %>

<% end %>