<h1>Log In</h1>

<div>
<% flash.each do |msg| %>
    <%= msg.last %>
<% end %>
</div>

<%= form_for(:giver, url: '/login') do |f| %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

    <br>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

    <br>

    <%= f.submit "Log In" %>

<% end %>